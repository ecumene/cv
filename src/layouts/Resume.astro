---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"resumes">["data"];

const { pubDate, updatedDate } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title="Resume" description="Mitchell Hynes Resume" />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body
    class="relative font-serif w-[8.5in] mx-auto px-[1in] py-[0.5in] print:pb-0 print:border-none border-2 border-dashed border-black"
  >
    <Header />
    <main>
      <article>
        <slot />
      </article>
    </main>
    <div
      class="absolute flex items-center justify-center top-0 left-0 right-0 print:hidden animate-pulse font-bold"
    >
      <div
        class="rounded-b-xl border-dashed border-black border-b-2 border-l-2 border-r-2 px-4 py-1"
      >
        Print me!! (or save me as a PDF) (âŒ˜ + P)
      </div>
    </div>
  </body>
</html>
